<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/base_currency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter base currency" />

    <EditText
        android:id="@+id/target_currency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter target currency" />

    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Currency Rate" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_open_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Weather" />

    <Button
        android:id="@+id/button_open_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Favorites" />

    <Button
        android:id="@+id/button_open_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Settings" />
</LinearLayout>
